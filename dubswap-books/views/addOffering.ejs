<div class="container">
  <form action="/addOffering" method="POST" enctype="multipart/form-data">

      
      <label for="itemName"><b>Item name</b></label>
      <input type="text" name="itemName" placeholder=""><br>
      
      <label for="Price"><b>rent per month</b></label>
      <input type="text" name="price" placeholder=""><br>
      
      <label for="itemType"><b>Item type</b></label>
      <input type="text" name="itemType" placeholder=""><br>
      
      <label for="itemModel"><b>Author/model</b></label>
      <input type="text" name="itemModel" id="password" placeholder=""><br><br>
      
      <label for="comment"><b>Item description<b></label>
      <textarea class="form-control" rows="5" id="comment" name="description" placeholder=""></textarea><br><br>
      
      <label for="displayPicture"><b>Upload Display Picture</b></label>
      <input type='file' name='dp' onchange="readURL(this);" />
      <div>
      <img id="blah" src="#" alt="your image" />
      </div>
      
       <label for="threePictures"><b>3 More pictures</b></label>
       <input type='file' name='otherImages' onchange="previewFiles();" id="files" multiple/>
       <div id="preview">
         
       </div>
      
      <button class="btn btn-primary" id="submit-button">Submit</button>
      </form>
      
      <script>
        function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result)
                    .width('50%')
            };

            reader.readAsDataURL(input.files[0]);
           }
       }
       
       function previewFiles() {

            var preview = document.querySelector('#preview');
            var files   = document.querySelector('#files').files;
          
            function readAndPreview(file) {
          
              // Make sure `file.name` matches our extensions criteria
              
                var reader = new FileReader();
          
                reader.addEventListener("load", function () {
                  var image = new Image();
                  
                  image.title = file.name;
                  image.src = this.result;
                  
                  image.style.width = "33%";
                  image.style.padding = "10px";
                  
                  preview.appendChild( image );
                }, false);
          
                reader.readAsDataURL(file);
              
          
            }
          
            if (files) {
              [].forEach.call(files, readAndPreview);
            }

        }
      </script>
  
