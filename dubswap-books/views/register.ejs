<% include partials/header %>

<link rel="stylesheet" href="/stylesheets/register.css">

        <div class="login-wrapper">
            <div class="container login-container rounded">
                <h1>Register</h1>
                <form action="\register" method="POST">
                    <div id="message2">
                        <% if(alreadyExists){ %>
                        <%= 'User already exists'%>    
                        <% } %>
                    </div>
                    <div class="form-group">
                        <label for="email"><b>Email</b></label>
                        <input type="text" class="form-control" name="email" placeholder="Email"><br>
                    </div>
                    <div class="form-group">
                        <label for="firstname"><b>First Name</b></label>
                        <input type="text" class="form-control" name="firstname" placeholder="First Name"><br>
                    </div>
                    <div class="form-group">
                        <label for="lastname"><b>Last Name</b></label>
                        <input type="text" class="form-control" name="lastname" placeholder="Last Name"><br>
                    </div>
                    <div class="form-group">
                        <label for="uname"><b>UW net-id</b></label>
                        <input type="text" class="form-control" name="username" placeholder="usrname"><br>
                    </div>
                    <div class="form-group">
                        <label for="psw"><b>Password</b></label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="password" onkeyup='check();'><br>
                    </div>
                    
                    <div class="form-group">
                        <label for="psw"><b>Confirm Password</b></label>
                        <input type="password" class="form-control" name="password2" id="confirm_password" placeholder="password" onkeyup='check();'><br>
                        <div id="message"></div>
                    </div>
                    <div id="forgot-password"><a href="\forgotPassword\requestChange">forgot password</a></div>
                    <button class="btn btn-primary" id="submit-button">Submit</button>
                </form>
            </div>
        </div>
        
        
        
        <script>
            var button = document.getElementById("submit-button");
            var check = function() {
              if (document.getElementById('password').value ==
                document.getElementById('confirm_password').value) {
                button.disabled = false;
                document.getElementById('message').style.color = 'green';
                document.getElementById('message').innerHTML = 'matching';
              } else {
                button.disabled = true;
                document.getElementById('message').style.color = 'red';
                document.getElementById('message').innerHTML = 'not matching';
              }
            }
        </script>
        
